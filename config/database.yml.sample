default: &default
  adapter: mysql2
  encoding: utf8mb4
  pool: <%= ENV["DB_POOL"] || ENV['RAILS_MAX_THREADS'] || 5 %>
  username: root
  password: shipit
  host: <%= ENV["DB_HOST"] %>

development: &development
  <<: *default
  database: shipit_development

test:
  <<: *development
  database: shipit_test

production:
  <<: *default
  database: shipit
