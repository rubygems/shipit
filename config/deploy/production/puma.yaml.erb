apiVersion: apps/v1
kind: Deployment
metadata:
  name: puma
  annotations:
    shipit.shopify.io/restart: 'true'
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 100%
      maxUnavailable: 0%
  selector:
    matchLabels:
      name: puma
  template:
    metadata:
      labels:
        name: puma
    spec:
      containers:
      - name: puma
        image: quay.io/rubygems/shipit:<%= current_sha %>
        args: ["bundle", "exec", "puma"]
        ports:
        - containerPort: 3000
          name: http-puma
        livenessProbe:
          httpGet:
            path: /services/ping
            port: 3000
            httpHeaders:
            - name: X-Forwarded-Proto
              value: https
            scheme: HTTP
          initialDelaySeconds: 10
          periodSeconds: 15
        resources:
          requests:
            cpu: 500m
            memory: 1.5Gi
          limits:
            cpu: 1000m
            memory: 2Gi
        env:
          - name: RAILS_ENV
            value: "production"
          - name: ENV
            value: "production"
          - name: WORKERS
            value: '4'
          - name: RAILS_MAX_THREADS
            value: '32'
          # - name: STATSD_IMPLEMENTATION
          #   value: "datadog"
          # - name: STATSD_HOST
          #   valueFrom:
          #     fieldRef:
          #       apiVersion: v1
          #       fieldPath: status.hostIP
          # - name: STATSD_ADDR
          #   value: $(STATSD_HOST):8125
          - name: SECRET_KEY_BASE
            valueFrom:
              secretKeyRef:
                name: production
                key: secret_key_base
          - name: RAILS_SERVE_STATIC_FILES
            value: "true"
          - name: RAILS_LOG_TO_STDOUT
            value: "true"
          - name: DATABASE_URL
            valueFrom:
              secretKeyRef:
                name: production
                key: database_url
          - name: REDIS_URL
            valueFrom:
              secretKeyRef:
                name: production
                key: redis_url
          - name: SHIPIT_HOST
            valueFrom:
              secretKeyRef:
                name: production
                key: shipit_host
          - name: SHIPIT_HOME_DIR
            valueFrom:
              secretKeyRef:
                name: production
                key: shipit_home_dir
          - name: GITHUB_OAUTH_ID
            valueFrom:
              secretKeyRef:
                name: production
                key: github_oauth_id
          - name: GITHUB_OAUTH_SECRET
            valueFrom:
              secretKeyRef:
                name: production
                key: github_oauth_secret
          - name: GITHUB_API_TOKEN
            valueFrom:
              secretKeyRef:
                name: production
                key: github_api_token
          - name: GITHUB_APP_ID
            valueFrom:
              secretKeyRef:
                name: production
                key: github_app_id
          - name: GITHUB_INSTALLATION_ID
            valueFrom:
              secretKeyRef:
                name: production
                key: github_installation_id
          - name: GITHUB_WEBHOOK_SECRET
            valueFrom:
              secretKeyRef:
                name: production
                key: github_webhook_secret
          - name: GITHUB_PRIVATE_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: github_private_key
          - name: PREVIOUS_ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: previous_active_record_encryption_primary_key
          - name: ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: active_record_encryption_primary_key
          - name: ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: active_record_encryption_deterministic_key
          - name: ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT
            valueFrom:
              secretKeyRef:
                name: production
                key: active_record_encryption_key_derivation_salt
        securityContext:
          privileged: false
        lifecycle:
          preStop:
            exec:
              command: ["sleep", "5"]
