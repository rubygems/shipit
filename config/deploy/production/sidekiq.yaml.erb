apiVersion: apps/v1
kind: Deployment
metadata:
  name: sidekiq
  annotations:
    shipit.shopify.io/restart: 'true'
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 0%
      maxUnavailable: 50%
  selector:
    matchLabels:
      name: sidekiq
  template:
    metadata:
      labels:
        name: sidekiq
    spec:
      containers:
      - name: sidekiq
        image: quay.io/rubygems/shipit:<%= current_sha %>
        args: ["bundle", "exec", "sidekiq", "-C", "config/sidekiq.yml"]
        resources:
          requests:
            cpu: 200m
            memory: 1Gi
          limits:
            cpu: 500m
            memory: 1.5Gi
        env:
          - name: RAILS_ENV
            value: "production"
          - name: ENV
            value: "production"
          # - name: STATSD_IMPLEMENTATION
          #   value: "datadog"
          # - name: STATSD_HOST
          #   valueFrom:
          #     fieldRef:
          #       apiVersion: v1
          #       fieldPath: status.hostIP
          # - name: STATSD_ADDR
          #   value: $(STATSD_HOST):8125
          - name: SECRET_KEY_BASE
            valueFrom:
              secretKeyRef:
                name: production
                key: secret_key_base
          - name: DATABASE_URL
            valueFrom:
              secretKeyRef:
                name: production
                key: database_url
          - name: REDIS_URL
            valueFrom:
              secretKeyRef:
                name: production
                key: redis_url
          - name: SHIPIT_HOST
            valueFrom:
              secretKeyRef:
                name: production
                key: shipit_host
          - name: SHIPIT_HOME_DIR
            valueFrom:
              secretKeyRef:
                name: production
                key: shipit_home_dir
          - name: GITHUB_OAUTH_ID
            valueFrom:
              secretKeyRef:
                name: production
                key: github_oauth_id
          - name: GITHUB_OAUTH_SECRET
            valueFrom:
              secretKeyRef:
                name: production
                key: github_oauth_secret
          - name: GITHUB_API_TOKEN
            valueFrom:
              secretKeyRef:
                name: production
                key: github_api_token
          - name: GITHUB_APP_ID
            valueFrom:
              secretKeyRef:
                name: production
                key: github_app_id
          - name: GITHUB_INSTALLATION_ID
            valueFrom:
              secretKeyRef:
                name: production
                key: github_installation_id
          - name: GITHUB_WEBHOOK_SECRET
            valueFrom:
              secretKeyRef:
                name: production
                key: github_webhook_secret
          - name: GITHUB_PRIVATE_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: github_private_key
          - name: PREVIOUS_ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: previous_active_record_encryption_primary_key
          - name: ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: active_record_encryption_primary_key
          - name: ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY
            valueFrom:
              secretKeyRef:
                name: production
                key: active_record_encryption_deterministic_key
          - name: ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT
            valueFrom:
              secretKeyRef:
                name: production
                key: active_record_encryption_key_derivation_salt
        securityContext:
          privileged: false
